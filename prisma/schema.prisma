datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Utilisateur {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  nom      String?
  prenom      String?
  dateNaissance YEAR
  role      Role     @default(USER)
  dateAbonnement DateTime @default(now())

}


model Cours {
  id        Int      @id @default(autoincrement())
  dateCreation DateTime @default(now())
  datePublication DateTime @updatedAt
  dateCours Boolean  @default(false)
  heureCours
  nomCours     String   @db.VarChar(255)
  professeurs    User?    @relation(fields: [authorId], references: [id])
  profID  Int?
}

enum Role {
  USER
  ADMIN
}